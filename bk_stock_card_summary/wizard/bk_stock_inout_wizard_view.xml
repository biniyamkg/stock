<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_inout_wizard" model="ir.ui.view">
        <field name="name">bk.stock.inout.wizard.form</field>
        <field name="model">bk.stock.inout.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock In/Out Report">
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="state"/>
                        <field name="report_type"/>
                    </group>
                    <group>
                        <field name="location_ids" widget="many2many_tags"/>
                        <field name="categ_ids" widget="many2many_tags"/>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                </group>

                <footer>
                    <button string="Export Excel" type="object" name="action_export_excel" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="bk_action_stock_inout_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Flow Report</field>
        <field name="res_model">bk.stock.inout.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu entry under Inventory > Reporting -->
    <menuitem id="bk_menu_stock_inout_report"
              name="Stock Balance"
              parent="stock.menu_warehouse_report"
              action="bk_action_stock_inout_wizard"
              sequence="30"/>
</odoo>

